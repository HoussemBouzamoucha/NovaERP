{% extends 'base.html.twig' %}

{% block title %}Settings index{% endblock %}

{% block body %}
    <h1>Settings index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CompanyName</th>
                <th>LogoPath</th>
                <th>Currency</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.companyName }}</td>
                <td>{{ setting.logoPath }}</td>
                <td>{{ setting.currency }}</td>
                <td>{{ setting.address }}</td>
                <td>{{ setting.email }}</td>
                <td>{{ setting.phone }}</td>
                <td>{{ setting.updatedAt ? setting.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_settings_show', {'id': setting.id}) }}">show</a>
                    <a href="{{ path('app_settings_edit', {'id': setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_settings_new') }}">Create new</a>
{% endblock %}
