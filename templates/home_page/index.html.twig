{% extends 'base.html.twig' %}

{% block title %}Home Page
{% endblock %}

{% block body %}
	<!-- Hero / Top Section -->
	<section id="home" class="py-5 text-center bg-primary text-white">
		<div class="container">
			<h1>Welcome to NovaERP</h1>
			<p>Your all-in-one ERP solution</p>

		</div>
	</section>

	<!-- About Section -->
	<section id="about" class="py-5 bg-light">
		<div class="container">
			<h2>About Us</h2>
			<p>Here is some info about the company...</p>
		</div>
	</section>

	<!-- Project Section -->
	<section id="projects" class="py-5">
		<div class="container">
			<h2>Our Projects</h2>
			<p>Details about our projects...</p>
		</div>
	</section>

	<!-- Testimonials Section -->
	<section id="testimonials" class="py-5 bg-light">
		<div class="container">
			<h2>Testimonials</h2>
			<p>What our clients say...</p>
		</div>
	</section>

	<!-- Internships Section -->
	<section id="internships" class="py-5">
		<div class="container">
			<h2>Internships</h2>
			<p>Join our team as an intern...</p>
		</div>
	</section>

