{% extends 'base.html.twig' %}

{% block title %}Create New User
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		body {
			background: linear-gradient(135deg, #e3f2fd, #f8fafc);
			font-family: 'Inter', system-ui, -apple-system, sans-serif;
			color: #1f2937;
		}

		.page-wrapper {
			display: flex;
			justify-content: center;
			align-items: flex-start;
			padding: 60px 20px;
			min-height: 100vh;
		}

		.card {
			width: 100%;
			max-width: 700px;
			background: #fff;
			border-radius: 20px;
			padding: 40px 50px;
			box-shadow: 0 8px 28px rgba(0, 0, 0, 0.08);
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}

		.card:hover {
			transform: translateY(-4px);
			box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
		}

		h1 {
			text-align: center;
			font-size: 2.2rem;
			font-weight: 700;
			margin-bottom: 1.5rem;
			color: #1d4ed8;
		}

		.subtitle {
			text-align: center;
			color: #6b7280;
			margin-bottom: 2rem;
			font-size: 1rem;
		}

		form {
			display: flex;
			flex-direction: column;
			gap: 1.5rem;
		}

		label {
			font-weight: 600;
			color: #374151;
			margin-bottom: 5px;
			display: block;
		}

		input,
		select,
		textarea {
			width: 100%;
			padding: 12px 15px;
			border: 1px solid #d1d5db;
			border-radius: 10px;
			font-size: 1rem;
			background-color: #f9fafb;
			transition: all 0.3s ease;
		}

		input:focus,
		select:focus,
		textarea:focus {
			border-color: #2563eb;
			background-color: #fff;
			box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
			outline: none;
		}

		.btn-container {
			display: flex;
			justify-content: center;
			gap: 20px;
			margin-top: 30px;
		}

		.btn {
			text-decoration: none;
			padding: 12px 28px;
			border-radius: 10px;
			font-weight: 600;
			font-size: 1rem;
			transition: all 0.3s ease;
			border: none;
			cursor: pointer;
		}

		.btn-primary {
			background-color: #2563eb;
			color: #fff;
		}

		.btn-primary:hover {
			background-color: #1e40af;
			transform: translateY(-2px);
			box-shadow: 0 6px 14px rgba(37, 99, 235, 0.25);
		}

		.btn-secondary {
			background-color: #9ca3af;
			color: #fff;
		}

		.btn-secondary:hover {
			background-color: #6b7280;
			transform: translateY(-2px);
		}
	</style>
{% endblock %}

{% block body %}
	<div class="page-wrapper">
		<div class="card">
			<h1>Create New User</h1>
			<p class="subtitle">Fill out the form below to add a new user to NovaERP.</p>

			{{ include('users/_form.html.twig') }}

			<div class="btn-container">
				<a href="{{ path('app_users_index') }}" class="btn btn-secondary">‚Üê Back to List</a>
			</div>
		</div>
	</div>
{% endblock %}
