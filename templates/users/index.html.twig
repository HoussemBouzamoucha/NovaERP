{% extends 'base.html.twig' %}

{% block title %}Users Index
{% endblock %}

{% block body %}
	<style>
		body {
			font-family: 'Segoe UI', sans-serif;
			background: linear-gradient(135deg, #1b2735, #090a0f);
			color: #fff;
			margin: 0;
			padding: 0;
			min-height: 100vh;
		}

		.users-container {
			max-width: 1200px;
			margin: 3rem auto;
			background: rgba(255, 255, 255, 0.1);
			backdrop-filter: blur(10px);
			border-radius: 1rem;
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
			padding: 2rem 2.5rem;
		}

		h1 {
			text-align: center;
			font-size: 2rem;
			margin-bottom: 2rem;
			color: #00b4d8;
		}

		.table {
			width: 100%;
			border-collapse: collapse;
			background: rgba(255, 255, 255, 0.05);
			border-radius: 0.8rem;
			overflow: hidden;
		}

		.table th,
		.table td {
			padding: 0.9rem 1rem;
			text-align: left;
			border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		}

		.table th {
			background: rgba(0, 180, 216, 0.3);
			color: #fff;
			font-weight: 600;
		}

		.table tr:hover {
			background: rgba(255, 255, 255, 0.1);
			transition: 0.2s ease;
		}

		a {
			color: #00b4d8;
			text-decoration: none;
			font-weight: 500;
			margin-right: 0.5rem;
		}

		a:hover {
			text-decoration: underline;
		}

		.create-btn {
			display: inline-block;
			background: #00b4d8;
			color: white;
			border: none;
			border-radius: 0.5rem;
			padding: 0.8rem 1.2rem;
			font-size: 1rem;
			font-weight: 600;
			cursor: pointer;
			margin-top: 1.5rem;
			transition: background 0.3s ease;
		}

		.create-btn:hover {
			background: #0096c7;
		}

		.no-records {
			text-align: center;
			color: #ccc;
			font-style: italic;
			padding: 1rem;
		}
	</style>

	<div class="users-container">
		<h1>Users Index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Password</th>
					<th>Roles</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Department</th>
					<th>Created at</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.password }}</td>
						<td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
						<td>{{ user.firstName }}</td>
						<td>{{ user.lastName }}</td>
						<td>{{ user.department }}</td>
						<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_users_show', {'id': user.id}) }}">Show</a>
							<a href="{{ path('app_users_edit', {'id': user.id}) }}">Edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9" class="no-records">No records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div style="text-align: center;">
			<a href="{{ path('app_users_new') }}" class="create-btn">+ Create New</a>
		</div>
	</div>
{% endblock %}
