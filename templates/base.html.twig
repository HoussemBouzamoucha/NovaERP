<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
			<style>
				/* Add spacing for fixed navbar */
				body {
					padding-top: 70px; /* height of navbar */
				}

				main {
					min-height: calc(100vh - 70px); /* full height minus navbar */
				}

				.nav-link.active {
					font-weight: 600;
					color: #0d6efd !important;
				}
				html {
					scroll-behavior: smooth;
				}
				.loginBtn {
					background-color: #black;
					color: white;
					text-decoration: none;
					padding: 8px 16px;
					border-radius: 4px;
				}
				.loginBtn:hover {
					background-color: #555;
					color: orange;
				}
				nav-item {
					margin-right: 15px;
					color: red;
				}
			</style>
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


		{% endblock %}
	</head>

	<body>
		<!-- Fixed Navbar -->
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
			<div class="container-fluid">
				<a
					class="navbar-brand" href="#home">
					<!-- Inline SVG icon -->
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-building2 h-6 w-6 text-[#2B6CB0] me-2" aria-hidden="true">
						<path d="M10 12h4"></path>
						<path d="M10 8h4"></path>
						<path d="M14 21v-3a2 2 0 0 0-4 0v3"></path>
						<path d="M6 10H4a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-2"></path>
						<path d="M6 21V5a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v16"></path>
					</svg>
					NovaERP
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>


				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link" href="#home">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#about">About</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#projects">Projects</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#testimonials">Testimonials</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#internships">Internships</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#contact">Contact</a>
						</li>
					</ul>

					<div class="d-flex align-items-center">
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<span class="text-light me-3">Hello,
								{{ app.user.firstName ?? 'User' }}!</span>
							<a href="{{ path('app_logout') }}" class="btn btn-outline-danger btn-sm">Logout</a>
						{% else %}
							<a href="{{ path('access_erp') }}" class="loginBtn" class="btn btn-outline-light btn-sm">Access Nova</a>
						{% endif %}
					</div>
				</div>
			</div>
		</nav>


		<!-- Main Content -->
		<main class="container mt-4"> {% block body %}{% endblock %}
			</main>
		</body>
	</html>
