<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
			<style>
				/* Add spacing for fixed navbar */
				body {
					padding-top: 70px; /* height of navbar */
				}

				main {
					min-height: calc(100vh - 70px); /* full height minus navbar */
				}

				.nav-link.active {
					font-weight: 600;
					color: #0d6efd !important;
				}
			</style>
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
		{% endblock %}
	</head>

	<body>
		<!-- Fixed Navbar -->
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('app_home_page') }}">MyApp</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link {% if app.request.attributes.get('_route') == 'app_home_page' %}active{% endif %}" href="{{ path('app_home_page') }}">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if app.request.attributes.get('_route') == 'about_us' %}active{% endif %}" href="{{ path('about_us') }}">About Us</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if app.request.attributes.get('_route') == 'our_project' %}active{% endif %}" href="{{ path('our_project') }}">Projects</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if app.request.attributes.get('_route') == 'our_testimonial' %}active{% endif %}" href="{{ path('our_testimonial') }}">Testimonials</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if app.request.attributes.get('_route') == 'our_interships' %}active{% endif %}" href="{{ path('our_interships') }}">Internships</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if app.request.attributes.get('_route') == 'contact_us' %}active{% endif %}" href="{{ path('contact_us') }}">Contact</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if app.request.attributes.get('_route') == 'access_erp' %}active{% endif %}" href="{{ path('access_erp') }}">Access ERP</a>
						</li>
					</ul>

					<div class="d-flex align-items-center">
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<span class="text-light me-3">
								Hello,
								{{ app.user.firstName ?? 'User' }}!
							</span>
							<a href="{{ path('app_logout') }}" class="btn btn-outline-danger btn-sm">
								Logout
							</a>
						{% else %}
							<a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm">
								Login
							</a>
						{% endif %}
					</div>
				</div>
			</div>
		</nav>

		<!-- Main Content -->
		<main class="container mt-4"> {% block body %}{% endblock %}
			</main>
		</body>
	</html>
