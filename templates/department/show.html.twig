{% extends 'base.html.twig' %}

{% block title %}View Department
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		body {
			background: linear-gradient(135deg, #4f46e5, #9333ea);
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
			font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
		}

		.department-card {
			background: #ffffff;
			border-radius: 16px;
			padding: 2.5rem;
			box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
			width: 100%;
			max-width: 600px;
			animation: fadeInUp 0.6s ease;
		}

		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		h1 {
			font-size: 1.8rem;
			font-weight: 600;
			text-align: center;
			margin-bottom: 1.5rem;
			color: #343a40;
		}

		.info-item {
			margin-bottom: 1.2rem;
		}

		.info-label {
			font-weight: 600;
			color: #6c757d;
		}

		.info-value {
			color: #343a40;
			font-size: 1rem;
		}

		.btn-primary {
			background: linear-gradient(90deg, #4f46e5, #9333ea);
			border: none;
			border-radius: 8px;
			padding: 0.7rem 1.2rem;
			color: #fff;
			font-weight: 500;
			width: 100%;
			transition: all 0.3s ease;
			margin-top: 1rem;
		}

		.btn-primary:hover {
			transform: translateY(-2px);
			box-shadow: 0 5px 15px rgba(79, 70, 229, 0.4);
		}

		.back-link {
			display: block;
			text-align: center;
			margin-top: 1.2rem;
			color: #6c757d;
			font-weight: 500;
			transition: color 0.2s;
		}

		.back-link:hover {
			color: #9333ea;
			text-decoration: underline;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="department-card">
		<h1>üè¢ Department Details</h1>

		<div class="info-item">
			<span class="info-label">Name:</span>
			<div class="info-value">{{ department.name }}</div>
		</div>

		<div class="info-item">
			<span class="info-label">Description:</span>
			<div class="info-value">{{ department.Description }}</div>
		</div>

		<div class="info-item">
			<span class="info-label">Created At:</span>
			<div class="info-value">{{ department.CreatedAt ? department.CreatedAt|date('Y-m-d H:i') : 'N/A' }}</div>
		</div>

		<a href="{{ path('app_department_edit', {'id': department.id}) }}" class="btn btn-primary">‚úèÔ∏è Edit Department</a>
		<a href="{{ path('app_department_index') }}" class="back-link">‚Üê Back to list</a>
	</div>
{% endblock %}
