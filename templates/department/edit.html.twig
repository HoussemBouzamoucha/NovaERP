{% extends 'base.html.twig' %}

{% block title %}Edit Department
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		body {
			background: linear-gradient(135deg, #4f46e5, #9333ea);
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
			font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
		}

		.department-form-container {
			background: #ffffff;
			border-radius: 16px;
			padding: 2.5rem;
			box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
			width: 100%;
			max-width: 600px;
			animation: fadeInUp 0.6s ease;
		}

		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		h1 {
			font-size: 1.8rem;
			font-weight: 600;
			text-align: center;
			margin-bottom: 1.5rem;
			color: #343a40;
		}

		label {
			font-weight: 600;
			color: #495057;
			margin-bottom: 0.4rem;
			display: block;
		}

		.form-control {
			border-radius: 8px;
			border: 1px solid #ced4da;
			padding: 0.6rem 0.8rem;
			transition: border-color 0.2s, box-shadow 0.2s;
			font-size: 0.95rem;
		}

		.form-control:focus {
			border-color: #7c3aed;
			box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.25);
		}

		textarea.form-control {
			min-height: 140px;
			resize: vertical;
		}

		.btn-primary {
			background: linear-gradient(90deg, #4f46e5, #9333ea);
			border: none;
			border-radius: 8px;
			padding: 0.7rem 1.2rem;
			color: #fff;
			font-weight: 500;
			width: 100%;
			transition: all 0.3s ease;
			margin-top: 1rem;
		}

		.btn-primary:hover {
			transform: translateY(-2px);
			box-shadow: 0 5px 15px rgba(79, 70, 229, 0.4);
		}

		.back-link {
			display: block;
			text-align: center;
			margin-top: 1.2rem;
			color: #6c757d;
			font-weight: 500;
			transition: color 0.2s;
		}

		.back-link:hover {
			color: #9333ea;
			text-decoration: underline;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="department-form-container">
		<h1>✏️ Edit Department</h1>

		{{ form_start(form) }}
		<div class="mb-3">
			{{ form_label(form.name) }}
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.Description) }}
			{{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.Created_at) }}
			{{ form_widget(form.Created_at, {'attr': {'class': 'form-control'}}) }}
		</div>

		<button class="btn btn-primary">Save Changes</button>
		{{ form_end(form) }}

		<a href="{{ path('app_department_index') }}" class="back-link">← Back to list</a>
	</div>
{% endblock %}
