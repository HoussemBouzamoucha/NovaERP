{% extends 'base.html.twig' %}

{% block title %}Supplier index{% endblock %}

{% block body %}
    <h1>Supplier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ContactInfo</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Adress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td>{{ supplier.id }}</td>
                <td>{{ supplier.name }}</td>
                <td>{{ supplier.contactInfo ? supplier.contactInfo|json_encode : '' }}</td>
                <td>{{ supplier.email }}</td>
                <td>{{ supplier.phoneNumber }}</td>
                <td>{{ supplier.adress }}</td>
                <td>
                    <a href="{{ path('app_supplier_show', {'id': supplier.id}) }}">show</a>
                    <a href="{{ path('app_supplier_edit', {'id': supplier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_supplier_new') }}">Create new</a>
{% endblock %}
