{% extends 'base.html.twig' %}

{% block title %}Create New Supplier
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		body {
			background: linear-gradient(135deg, #4f46e5, #9333ea);
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
			font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
		}

		.supplier-card {
			background: #ffffff;
			border-radius: 16px;
			padding: 2.5rem;
			box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
			width: 100%;
			max-width: 600px;
			animation: fadeInUp 0.6s ease;
		}

		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		h1 {
			font-size: 1.8rem;
			font-weight: 600;
			text-align: center;
			margin-bottom: 1.5rem;
			color: #343a40;
		}

		.form-group {
			margin-bottom: 1.5rem;
		}

		.info-label {
			font-weight: 600;
			color: #6c757d;
			margin-bottom: 5px;
			display: block;
		}

		.form-control {
			width: 100%;
			padding: 12px 15px;
			border: 1px solid #d1d5db;
			border-radius: 10px;
			font-size: 1rem;
			background-color: #f9fafb;
			transition: all 0.3s ease;
		}

		.form-control:focus {
			border-color: #2563eb;
			background-color: #fff;
			box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
			outline: none;
		}

		.btn-primary {
			background: linear-gradient(90deg, #4f46e5, #9333ea);
			border: none;
			border-radius: 8px;
			padding: 0.7rem 1.2rem;
			color: #fff;
			font-weight: 500;
			transition: all 0.3s ease;
			width: 100%;
			cursor: pointer;
		}

		.btn-primary:hover {
			transform: translateY(-2px);
			box-shadow: 0 5px 15px rgba(79, 70, 229, 0.4);
		}

		.back-link {
			display: block;
			text-align: center;
			margin-top: 1rem;
			color: #6c757d;
			font-weight: 500;
			text-decoration: none;
			transition: color 0.2s;
		}

		.back-link:hover {
			color: #9333ea;
			text-decoration: underline;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="supplier-card">
		<h1>üè≠ Create New Supplier</h1>

		{{ form_start(form) }}

		{% for field in form %}
			<div class="form-group">
				{{ form_label(field, null, {'label_attr': {'class': 'info-label'}}) }}
				{{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(field) }}
			</div>
		{% endfor %}

		<button type="submit" class="btn-primary">{{ button_label|default('Save') }}</button>

		{{ form_end(form) }}

		<a href="{{ path('app_supplier_index') }}" class="back-link">‚Üê Back to list</a>
	</div>
{% endblock %}
