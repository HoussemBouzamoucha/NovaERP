{% extends 'base.html.twig' %}

{% block title %}Attendance{% endblock %}

{% block body %}
    <h1>Attendance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attendance.id }}</td>
            </tr>
            <tr>
                <th>CheckIn_at</th>
                <td>{{ attendance.checkInAt ? attendance.checkInAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CheckOut_at</th>
                <td>{{ attendance.checkOutAt ? attendance.checkOutAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TotalHours</th>
                <td>{{ attendance.totalHours }}</td>
            </tr>
            <tr>
                <th>Date_at</th>
                <td>{{ attendance.dateAt ? attendance.dateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_attendance_index') }}">back to list</a>

    <a href="{{ path('app_attendance_edit', {'id': attendance.id}) }}">edit</a>

    {{ include('attendance/_delete_form.html.twig') }}
{% endblock %}
