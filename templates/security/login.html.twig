{# templates/security/login.html.twig #}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Login | NovaERP</title>
		<style>
			body {
				font-family: 'Segoe UI', sans-serif;
				background: linear-gradient(135deg, #1b2735, #090a0f);
				color: #fff;
				display: flex;
				align-items: center;
				justify-content: center;
				height: 100vh;
				margin: 0;
			}
			.login-container {
				background: rgba(255, 255, 255, 0.1);
				padding: 2.5rem 3rem;
				border-radius: 1rem;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
				width: 100%;
				max-width: 400px;
				text-align: center;
			}
			h1 {
				margin-bottom: 1.5rem;
				font-size: 1.8rem;
				color: #fff;
			}
			input[type="email"],
			input[type="password"] {
				width: 100%;
				padding: 0.8rem;
				margin-bottom: 1rem;
				border: none;
				border-radius: 0.5rem;
				background: rgba(255, 255, 255, 0.2);
				color: #fff;
				font-size: 1rem;
			}
			input[type="email"]::placeholder,
			input[type="password"]::placeholder {
				color: #ddd;
			}
			button {
				background: #00b4d8;
				color: white;
				border: none;
				border-radius: 0.5rem;
				padding: 0.8rem 1.5rem;
				font-size: 1rem;
				cursor: pointer;
				transition: background 0.3s ease;
				width: 100%;
			}
			button:hover {
				background: #0096c7;
			}
			.error {
				background: rgba(255, 0, 0, 0.2);
				padding: 0.5rem;
				border-radius: 0.3rem;
				color: #ffcccc;
				margin-bottom: 1rem;
			}
			.note {
				font-size: 0.9rem;
				color: #aaa;
				margin-top: 1rem;
			}
		</style>
	</head>
	<body>
		<div class="login-container">
			<h1>Login to NovaERP</h1>

			{# Display login errors #}
			{% if error %}
				<div class="error">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<form method="post">
				<input type="email" name="email" value="{{ last_username }}" placeholder="Email" required>
				<input type="password" name="password" placeholder="Password" required>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button type="submit">Login</button>
			</form>

			<div class="note">
				<p>Donâ€™t have an account?
					<a href="/register" style="color:#00b4d8;">Create one</a>
				</p>
			</div>
		</div>
	</body>
</html>
