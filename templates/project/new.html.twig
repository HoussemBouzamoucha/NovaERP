{% extends 'base.html.twig' %}

{% block title %}New Project
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		body {
			background: linear-gradient(135deg, #4f46e5, #9333ea);
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
			font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
		}

		.project-card {
			background: #ffffff;
			border-radius: 16px;
			padding: 2.5rem;
			box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
			width: 100%;
			max-width: 700px;
			animation: fadeInUp 0.6s ease;
		}

		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		h1 {
			font-size: 1.8rem;
			font-weight: 600;
			text-align: center;
			margin-bottom: 1.5rem;
			color: #343a40;
		}

		form {
			display: flex;
			flex-direction: column;
			gap: 1.2rem;
		}

		.btn-primary {
			background: linear-gradient(90deg, #4f46e5, #9333ea);
			border: none;
			border-radius: 8px;
			padding: 0.7rem 1.2rem;
			color: #fff;
			font-weight: 500;
			transition: all 0.3s ease;
			text-align: center;
			text-decoration: none;
			cursor: pointer;
		}

		.btn-primary:hover {
			transform: translateY(-2px);
			box-shadow: 0 5px 15px rgba(79, 70, 229, 0.4);
		}

		.back-link {
			display: block;
			text-align: center;
			margin-top: 1rem;
			color: #6c757d;
			font-weight: 500;
			text-decoration: none;
			transition: color 0.2s;
		}

		.back-link:hover {
			color: #9333ea;
			text-decoration: underline;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="project-card">
		<h1>üìå Create New Project</h1>

		{{ include('project/_form.html.twig') }}

		<a href="{{ path('app_project_index') }}" class="back-link">‚Üê Back to list</a>
	</div>
{% endblock %}
