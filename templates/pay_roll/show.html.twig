{% extends 'base.html.twig' %}

{% block title %}PayRoll{% endblock %}

{% block body %}
    <h1>PayRoll</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pay_roll.id }}</td>
            </tr>
            <tr>
                <th>BaseSalary</th>
                <td>{{ pay_roll.baseSalary }}</td>
            </tr>
            <tr>
                <th>Bonus</th>
                <td>{{ pay_roll.bonus }}</td>
            </tr>
            <tr>
                <th>Deduction</th>
                <td>{{ pay_roll.deduction }}</td>
            </tr>
            <tr>
                <th>Month</th>
                <td>{{ pay_roll.month ? pay_roll.month|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PaymentDate_at</th>
                <td>{{ pay_roll.paymentDateAt ? pay_roll.paymentDateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ pay_roll.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pay_roll_index') }}">back to list</a>

    <a href="{{ path('app_pay_roll_edit', {'id': pay_roll.id}) }}">edit</a>

    {{ include('pay_roll/_delete_form.html.twig') }}
{% endblock %}
