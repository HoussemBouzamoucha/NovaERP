{% extends 'base.html.twig' %}

{% block title %}LeaveRequest index{% endblock %}

{% block body %}
    <h1>LeaveRequest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate_at</th>
                <th>EndDate_at</th>
                <th>Reason</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for leave_request in leave_requests %}
            <tr>
                <td>{{ leave_request.id }}</td>
                <td>{{ leave_request.startDateAt ? leave_request.startDateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ leave_request.endDateAt ? leave_request.endDateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ leave_request.reason }}</td>
                <td>{{ leave_request.status }}</td>
                <td>
                    <a href="{{ path('app_leave_request_show', {'id': leave_request.id}) }}">show</a>
                    <a href="{{ path('app_leave_request_edit', {'id': leave_request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_leave_request_new') }}">Create new</a>
{% endblock %}
